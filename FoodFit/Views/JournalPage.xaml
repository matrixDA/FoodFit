<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodFit.Views.JournalPage"
             Title="JournalPage">
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding Entries}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Label Text="{Binding Date, StringFormat='{0:MM/dd/yyyy HH:mm}'}" FontAttributes="Bold"/>
                        <Label Text="{Binding Text}" />
                        <Clicked="EntryButton_Clicked" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>