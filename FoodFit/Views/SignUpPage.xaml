<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodFit.Views.SignUpPage"
             Title="">
    <StackLayout Padding="20" Spacing="10">
        <Label Text="Create an Account" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="EntryUsername" Placeholder="Username" />
        <Entry x:Name="EntryEmail" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="EntryPassword" Placeholder="Password" IsPassword="True" />
        <Entry x:Name="EntryConfirmPassword" Placeholder="Confirm Password" IsPassword="True" />

        <Button Text="Sign Up" Clicked="OnSignupClicked" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Label Text="Already have an account?" />
        </StackLayout>
        <Button Text="Log in" Clicked="Button_Clicked"  />

    </StackLayout>
</ContentPage>