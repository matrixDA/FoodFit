<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodFit.Views.SearchPage"
             Title="Search Food">
    <VerticalStackLayout BackgroundColor="black" Padding="10">

        <Label Text="View Nutrition Facts " 
               TextColor="White" 
               HorizontalOptions="Center" 
               BackgroundColor="DarkGreen" 
               FontSize="Title" 
               Padding="10"/>

        <SearchBar Placeholder="Search for food..." 
                   Text="{Binding SearchText, Mode=TwoWay}" 
                   BackgroundColor="White"/>
        <CollectionView 
            ItemsSource="{Binding FilteredFoods}" 
            SelectionMode="Single" 
            x:Name="CvFoods"
            SelectionChanged="CollectionView_SelectionChanged">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="15" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border HeightRequest="150" >
                        <Label Text="{Binding FoodName}" FontSize="Medium" TextColor="White" />
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>