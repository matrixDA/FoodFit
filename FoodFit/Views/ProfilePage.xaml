<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodFit.Views.ProfilePage"
             Title="Profile"
             BackgroundColor="White">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
                <Frame HeightRequest="150" WidthRequest="150" CornerRadius="75" BackgroundColor="LightGray" HorizontalOptions="Center">
                    <Image Source="profileicon.png" Aspect="AspectFill" />
                </Frame>

                <Label Text="{Binding UserName}" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
                <Label Text="{Binding UserEmail}" FontSize="18" HorizontalOptions="Center" TextColor="Gray" />

                <!--<Button Text="Edit Profile" FontSize="Medium" BackgroundColor="Blue" TextColor="White" CornerRadius="10" Clicked="OnEditProfileClicked" />-->

                <VerticalStackLayout Spacing="10">
                <Label Text="Change Weight"/>
                <Label Text="Change Height"/>

            </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
</ContentPage>