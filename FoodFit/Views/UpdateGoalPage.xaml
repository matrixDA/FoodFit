<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodFit.Views.UpdateGoalPage"
             Title="UpdateGoalPage">
    <VerticalStackLayout>
     

        <Label Text="New Goals" 
               FontSize="Large" 
               FontAttributes="Bold"
               HorizontalOptions="Center" 
               VerticalOptions="Center" />

        <Entry x:Name="goalWeight" VerticalOptions="Center" Placeholder="Enter your new goal" />
        <Button Text="Update" Command="{Binding UpdateGoalCommand}" 
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                BackgroundColor="Blue" 
                TextColor="White" 
                CornerRadius="10" />


    </VerticalStackLayout>
</ContentPage>